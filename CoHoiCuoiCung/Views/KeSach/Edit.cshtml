@model CoHoiCuoiCung.Models.KE_SACH

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chính sửa thông tin kệ sách</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MA_KE_SACH)

        <div class="form-group">
            @Html.LabelFor(model => model.MA_KHU_VUC, "Khu vực", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MA_KHU_VUC", null, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.MA_KHU_VUC)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TEN_KE_SACH, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TEN_KE_SACH, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TEN_KE_SACH)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default form-control" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
