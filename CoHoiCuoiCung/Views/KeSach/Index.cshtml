@model IEnumerable<CoHoiCuoiCung.Models.KE_SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kệ sách</h2>

<p>
    @Html.ActionLink("Thêm mới kệ sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên kệ sách
        </th>
        <th>
            Tên khu vực
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TEN_KE_SACH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KHU_VUC.TEN_KHU_VUC)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.MA_KE_SACH })
        </td>
    </tr>
}

</table>
