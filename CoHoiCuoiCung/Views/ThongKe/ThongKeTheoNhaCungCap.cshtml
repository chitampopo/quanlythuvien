@model IEnumerable<CoHoiCuoiCung.Models.CUNG_CAP_SACH>
@{
    ViewBag.Title = "Thống kê sách theo nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
    DateTime ngayThongKe = new DateTime();
    ngayThongKe = DateTime.Now;
}
<center>
    <h2>Thống kê sách do @ViewBag.tenNCC cung cấp<br />Ngày thống kê @ngayThongKe.ToString("dd/MM/yyyy")</h2>
</center>

<table class="table table-responsive">
    <tr>
        <th>STT</th>
        <th>Thời gian</th>
        <th>Tên sách</th>
        <th>Nhà xuất bản</th>
        <th>Số lượng sách</th>
        <th>Số trang</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(i++)
            </td>
            <td>
                @item.THOI_GIAN
            </td>
            <td>
                @item.CUON_SACH.TEN_SACH
            </td>
            <td>
                @item.CUON_SACH.DAU_SACH.NHA_XUAT_BAN.TEN_NXB
            </td>
            <td>
                @item.SOLUONG
            </td>
            <td>
                @item.CUON_SACH.SO_TRANG
            </td>
        </tr>
    }
    <tr>
        <td>
            @ViewBag.thongBao
        </td>
    </tr>
</table>