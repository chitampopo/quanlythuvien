@model IEnumerable<CoHoiCuoiCung.Models.DOC_GIA>
@{
    ViewBag.Title = "Thống kê độc giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
    DateTime ngayThongKe = new DateTime();
    ngayThongKe = DateTime.Now;
}

<center>
    <h2>Thống kê độc giả<br />Ngày thống kê @ngayThongKe.ToString("dd/MM/yyyy")</h2>
</center>


<table class="table table-responsive">
    <tr>
        <th>STT</th>
        <th>Tên độc giả</th>
        <th>Số điện thoại</th>
        <th>Đỉa chỉ</th>
        <th>Ngày tham gia</th>
        <th>Email</th>
    </tr>
    @foreach (var item in Model)
{
    <tr>
        <td>
            @Html.Raw(i++)
        </td>
        <td>
            @item.TEN_DOC_GIA
        </td>
        <td>
            @item.SDT_DOC_GIA
        </td>
        <td>
            @item.DIA_CHI_DOC_GIA
        </td>
        <td>
            @item.NGAY_THAM_GIA
        </td>
        <td>
            @item.EMAIL
        </td>
    </tr>
}
</table>