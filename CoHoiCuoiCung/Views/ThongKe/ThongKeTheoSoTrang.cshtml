@model IEnumerable<CoHoiCuoiCung.Models.CUON_SACH>
@{
    ViewBag.Title = "Thống kê sách theo số trang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
    int tuTrang = (int)ViewBag.tuTrang;
    int denTrang = (int)ViewBag.denTrang;
    DateTime ngayThongKe = new DateTime();
    ngayThongKe = DateTime.Now;
}
<center>
    @if (tuTrang == denTrang)
    {
        <h2>Thống kê sách có @tuTrang trang<br />Ngày thống kê @ngayThongKe.ToString("dd/MM/yyyy")</h2>
    }
    else
    {
        <h2>Thống kê sách có từ @tuTrang đến @denTrang trang<br />Ngày thống kê @ngayThongKe.ToString("dd/MM/yyyy")</h2>
    }

</center>

<table class="table table-responsive">
    <tr>
        <th>STT</th>
        <th>Tên sách</th>
        <th>Nhà xuất bản</th>
        <th>Số lượng sách</th>
        <th>Số trang</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(i++)
            </td>
            <td>
                @item.TEN_SACH
            </td>
            <td>
                @item.DAU_SACH.NHA_XUAT_BAN.TEN_NXB
            </td>
            <td>
                @item.SO_LUONG
            </td>
            <td>
                @item.SO_TRANG
            </td>
        </tr>
    }
    <tr>
        <td>
            @ViewBag.thongBao
        </td>
    </tr>
</table>