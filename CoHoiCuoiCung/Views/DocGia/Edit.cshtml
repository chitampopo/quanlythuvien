                @Html.EditorFor(model => model.TEN_DOC_GIA)
                @Html.ValidationMessageFor(model => model.TEN_DOC_GIA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CMND, "Số CMND", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CMND)
                @Html.ValidationMessageFor(model => model.CMND)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT_DOC_GIA, "Số điện thoại",  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT_DOC_GIA)
                @Html.ValidationMessageFor(model => model.SDT_DOC_GIA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DIA_CHI_DOC_GIA, "Địa chỉ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIA_CHI_DOC_GIA)
                @Html.ValidationMessageFor(model => model.DIA_CHI_DOC_GIA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EMAIL, "Địa chỉ email",  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EMAIL)
                @Html.ValidationMessageFor(model => model.EMAIL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAY_THAM_GIA, "Ngày tham gia", new { @class = "control-label col-md-2" })
