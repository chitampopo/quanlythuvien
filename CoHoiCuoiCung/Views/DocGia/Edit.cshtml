                @Html.EditorFor(model => model.NGAY_THAM_GIA)
                @Html.ValidationMessageFor(model => model.NGAY_THAM_GIA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAY_HET_HAN, "Ngày hết hạn", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAY_HET_HAN)
                @Html.ValidationMessageFor(model => model.NGAY_HET_HAN)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
