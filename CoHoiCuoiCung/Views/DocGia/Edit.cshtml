                @Html.DropDownList("MA_DOI_TUONG", String.Empty)
                @Html.ValidationMessageFor(model => model.MA_DOI_TUONG)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TEN_DOC_GIA, "Tên độc giả", new { @class = "control-label col-md-2" })
