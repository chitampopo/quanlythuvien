<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Website quản lý thư viện</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/dist/css/AdminLTE.css" rel="stylesheet" />
    <!-- Ionicons 2.0.0 -->
    <link href="~/ionicons/css/ionicons.css" rel="stylesheet" />
    <!-- DATA TABLES -->
    <link href="~/Scripts/Plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Jquery-->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!-- Bootstrap javascript-->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Barcode -->
    <script src="~/Scripts/Plugins/jsbarcode/JsBarcode.js"></script>
    <script src="~/Scripts/Plugins/jsbarcode/CODE128.js"></script>
    <script src="~/Scripts/Plugins/jsbarcode/EAN_UPC.js"></script>
    <!-- Chart JS-->
    <script src="~/chart/Chart.js"></script>
    <script src="~/chart/src/Chart.Doughnut.js"></script>
    <style>
        #canvas-holder {
            width: 30%;
        }
    </style>
    <!-- Date picker-->
    <link href="~/Scripts/Plugins/datepicker/datepicker3.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Quản lý thư viện</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Nhân viên", "Index", "NhanVien", null, new { @id = "nhanvien" })</li>
                    <li>@Html.ActionLink("Độc giả", "Index", "DocGia", null, new { @id = "docgia" })</li>
                    <li>@Html.ActionLink("Các danh mục", "Index", "DanhMuc", null, new { @id = "danhmuc" })</li>
                    <li>@Html.ActionLink("Mượn trả sách", "Index", "MuonTraSach", null, new { @id = "muontrasach" })</li>
                    <li>@Html.ActionLink("Sách", "Index", "Sach", null, new { @id = "sach" })</li>
                    <li>@Html.ActionLink("Thống kê", "Index", "ThongKe", null, new { @id = "thongke" })</li>
                    <li>@Html.ActionLink("Đổi mật khẩu", "DoiMatKhau", "TaiKhoan")</li>
                    <li>@Html.ActionLink("Đăng xuất", "DangXuat", "TaiKhoan")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-bottom:50px">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- DATA TABES SCRIPT -->
    <script src="~/Scripts/Plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Scripts/Plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
    @Html.Action("Menu", "TaiKhoan")
    <!-- Datepicker -->
    <script src="~/Scripts/Plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $("#example1").dataTable();
        });
        $('.datepicker').datepicker({
        });
    </script>
    
</body>
</html>
