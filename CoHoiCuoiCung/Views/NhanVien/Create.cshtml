@model CoHoiCuoiCung.Models.NHAN_VIEN

@{
    ViewBag.Title = "Thêm nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm nhân viên</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Tên nhân viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TEN_NHAN_VIEN)
                @Html.ValidationMessageFor(model => model.TEN_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giới tính", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="gioiTinh">
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Địa chỉ nhân viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIA_CHI_NHAN_VIEN)
                @Html.ValidationMessageFor(model => model.DIA_CHI_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Số điện thoại nhân viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT_NHAN_VIEN)
                @Html.ValidationMessageFor(model => model.SDT_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tên tài khoản", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("tenTaiKhoan")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật khẩu", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("matKhau")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm nhân viên" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách nhân viên", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
