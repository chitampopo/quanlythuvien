@model CoHoiCuoiCung.Models.NHAN_VIEN

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa thông tin nhân viên</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MA_NHAN_VIEN)

        <div class="form-group">
            @Html.Label("Tên nhân viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TEN_NHAN_VIEN, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TEN_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Địa chỉ nhân viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DIA_CHI_NHAN_VIEN, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DIA_CHI_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Số điện thoại", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SDT_NHAN_VIEN, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SDT_NHAN_VIEN)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tài khoản", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" disabled name="tenTaiKhoan" value="@ViewData["tenTaiKhoan"]" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật khẩu mới", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="matKhauMoi" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
