@model IEnumerable<CoHoiCuoiCung.Models.QUYEN_SD>

@{
    ViewBag.Title = "Cấp quyền sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cấp quyền sử dụng</h2>

<p>
    @Html.ActionLink("Cấp mới quyền sử dụng", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên menu
        </th>
        <th>
            Tên chức vụ
        </th>
        <th>
            Tên quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MENU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHUC_VU.TEN_CHUC_VU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QUYEN.TEN_QUYEN)
        </td>
        <td>
            @Html.ActionLink("Xóa", "Delete", new { maQuyen=item.MA_QUYEN, maCV=item.MA_CHUC_VU})
        </td>
    </tr>
}

</table>
