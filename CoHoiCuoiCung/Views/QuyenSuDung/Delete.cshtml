@model CoHoiCuoiCung.Models.QUYEN_SD

@{
    ViewBag.Title = "Xóa quyền sử dụng của người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa quyền sử dụng của người dùng</h2>

<h3>Bạn có chắc sẽ xóa quyền này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID menu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MENU)
        </dd>

        <dt>
            Chức vụ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUC_VU.TEN_CHUC_VU)
        </dd>

        <dt>
            Tên quyền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QUYEN.TEN_QUYEN)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default form-actions" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
