@model CoHoiCuoiCung.Models.GIU_CHUC_VU

@{
    ViewBag.Title = "Cập nhật giữ chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật chức vụ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MA_NHAN_VIEN)

        @Html.HiddenFor(model => model.MA_CHUC_VU)

        <div class="form-group">
            @Html.LabelFor(model => model.NGAY_BAT_DAU, "Ngày bắt đầu", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NGAY_BAT_DAU, new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.NGAY_BAT_DAU)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAY_KET_THUC, "Ngày kết thúc", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NGAY_KET_THUC, new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.NGAY_KET_THUC)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default form-control" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
